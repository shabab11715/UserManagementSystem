@{
    ViewData["Title"] = "Resend Verification";
}

<div class="d-flex justify-content-center mt-5">
    <div class="surface-card w-100" style="max-width: 480px; padding: 36px;">
        <h4 class="fw-semibold mb-4">Resend Verification Email</h4>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger py-2">@ViewBag.Error</div>
        }

        <form method="post">
            <div class="mb-4">
                <label class="form-label">Email</label>
                <input type="email" name="email" class="form-control" required />
            </div>

            <button class="btn btn-primary w-100">Send Email</button>
        </form>

        <div class="text-center mt-3">
            <a href="/Auth/Login">Back to login</a>
        </div>
    </div>
</div>
